               <td>

              @* <a class="btn btn-warning" href="/Student/Update?id=@item.ID">Update</a> *@
                         <a class=" btn btn-info" asp-controller="Student" asp-action="Update" asp-route-id="@item.ID">Update</a> 
                <a class="btn btn-danger" href="/Student/Delete?id=@item.ID">Delete</a>
                        <a class="btn btn-primary" href="/Student/Detils?id=@item.ID">Detils</a>

                </td>
                    

            </tr>
                
        }
       
        
        </tbody>
    </table>
