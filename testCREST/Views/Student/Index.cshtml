<title>@ViewData["Title"] - StudentCRUD</title>
@model IEnumerable<Student>
@{
    Layout = "~/Views/Shared/mylayout.cshtml";
}

<div class="container">


    <table class="table table-bordered table-hover">
        <thead>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Gradutad</th>
                    <th>GPA</th>
                    <th>Faculty</th>
                    <th>Image</th>
                    <th>options</th>
        </thead>
        <tbody>
        @foreach(var item in Model)
        {
          <tr>

                <td>@item.ID</td>
                <td>@item.Name</td>
                <td>@item.Graduated</td>
                <td>@item.Gpa</td>
                <td>@item.Facluty.Name</td>
